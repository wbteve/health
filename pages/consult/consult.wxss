/* pages/consult/consult.wxss */
/*搜索框*/
.container{
  height: 100%;
  padding-bottom: 100rpx;
}
.search{
  padding:20rpx 20rpx 0 20rpx;
}
.search input{
  height: 55rpx;
  background-color: white;
  border-radius: 5px;
  text-align: center;
}
/*医师列表*/
.docItem{
  background-color: #ffffff;
  margin-top: 20rpx;
  padding:30rpx;
}
.docItem:last-of-type{
  background-color: #ffffff;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}

.docItem .head{
  display: flex;
  display: -webkit-flex;
}

.docItem .head .avator{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}

.docItem .head .avator image{
  width: 100%;
  height: 100%;
}

.docItem .head .headR{
  width: 80%;
  margin-left: 26rpx;
  padding-top: 10rpx;
}

.docItem .head .headR .name{
  margin-right: 50rpx;
}
.docItem .head .headR .headRD{
  padding: 15rpx 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}

/*疾病列表*/
.ill{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap:wrap;
}
.illItem{
  width: 320rpx;
  text-align: center;
  margin-top: 50rpx;
  background-color: #fff;
}
.illItem:nth-of-type(2n+1){
  margin-left:30rpx;
}
.illItem:nth-of-type(2n){
  margin-right:30rpx;
}
.illItem .illImg image{
  width: 100%;
  height: 220rpx;
}
.illItem .illName{
  background-color: #fff;
}
