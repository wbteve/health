/* pages/consult/consult.wxss */
/*搜索框*/
.container{
  height: 100%;
  padding-bottom: 100rpx;
  color: #333333;
}
.search{
  padding:20rpx 20rpx 0 20rpx;
}
.search input{
  height: 55rpx;
  background-color: white;
  border-radius: 5px;
  text-align: center;
}
.container .contact{
  background-color: #ff5722;
  overflow: hidden;
}
.container .contact button{
  width: 232rpx;
  height: 230rpx;
  border-radius: 116rpx;
  background-color: white;
  color: orangered;
  border-color: white;
  border: none;
  line-height: 230rpx;
  font-size: 42rpx;
  margin-top: 30rpx;
  outline: none;
  outline-color: white;
}
.container .word{
  text-align: center;
  /*margin-top: 20rpx;*/
  line-height: 118rpx;
  color: #ffffff;
}

.container .content{
  padding: 28rpx 28rpx 100rpx 28rpx;
}

.container .content .head{
  line-height: 90rpx;
  border-bottom: 1px #e3e3e3 solid;
}
.container .content .diagList{
  padding: 28rpx 0;
  border-bottom: 1px #e3e3e3 solid;
  position: relative;
}
.container .content .diagList .top,.container .content .diagList .info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.container .content .diagList .top .eval{
  color: #ff5722;
}
.container .content .diagList .desc{
  margin-bottom: 30rpx;
}
.container .content .diagList .desc .descTit{
  margin-bottom: 16rpx;
}
.container .content .diagList .desc .descont{
  margin-bottom: 16rpx;
  color: #666666;
}
.container .content .diagList .label text{
  margin-right: 14rpx;
  background-color: rgba(255, 87, 34, .3);
  color: #ff5722;
  border-radius: 3px;
  padding: 3rpx 5rpx;
}
.container .content .diagList .shareBtn{
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
  position: absolute;
  bottom: 6rpx;
  right: 2rpx;
  /*background-color: white;*/
  border-radius: 0px;
  border-color: red;
  box-sizing: border-box;
  background-color: transparent;
}
.container .content .diagList .share{
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: 100;
  border: 1px #fff solid;
  /*padding: 8rpx;
  position: absolute;
  bottom: 6rpx;
  right: 2rpx;*/
}
/*医师列表*/
.docItem{
  background-color: #ffffff;
  margin-top: 20rpx;
  padding:30rpx;
}
.docItem:last-of-type{
  background-color: #ffffff;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}

.docItem .head{
  display: flex;
  display: -webkit-flex;
}

.docItem .head .avator{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}

.docItem .head .avator image{
  width: 100%;
  height: 100%;
}

.docItem .head .headR{
  width: 80%;
  margin-left: 26rpx;
  padding-top: 10rpx;
}

.docItem .head .headR .name{
  margin-right: 50rpx;
}
.docItem .head .headR .headRD{
  padding: 15rpx 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}

/*疾病列表*/
.ill{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap:wrap;
}
.illItem{
  width: 320rpx;
  text-align: center;
  margin-top: 50rpx;
  background-color: #fff;
}
.illItem:nth-of-type(2n+1){
  margin-left:30rpx;
}
.illItem:nth-of-type(2n){
  margin-right:30rpx;
}
.illItem .illImg image{
  width: 100%;
  height: 220rpx;
}
.illItem .illName{
  background-color: #fff;
}
