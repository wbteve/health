/* pages/detail/detail.wxss */
.container{
  padding-bottom: 100rpx;
}
.header{
  background-color: #fff;
}
.header .introImg{
  height: 400rpx;
  overflow: hidden;
}
.header image{
  width: 100%;
}
.header .intro{
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  line-height: 42rpx;
}

.content{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}
.content .top{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between
}
.content .avatar{
  width: 430rpx;
  height: 370rpx;
  overflow: hidden;
}
.content .avatar image{
  width: 100%;
  height: 100%;
}

.content .top .topR .title{
  padding-top: 10rpx;
}

.content .top .topR .title .logo{
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.content .top .topR .title text{
  margin-right: 20rpx;
}
.content .self{
  margin-top: 20rpx;
}
.content .self .selfcont .selftext{
  margin-top: 20rpx;
  background-color: #f7f7f7;
}
/*.content .self .selfcont text{
  background-color: #f7f7f7;
}*/
.content .self .header,.content .ill .header{
  text-align: center;
}

.content .self .header image,.content .ill .header image{
  width:35rpx;
  height: 35rpx;
}

.content .ill{
  margin-top: 30rpx;
  border-bottom: 1px #e3e3e3 solid;
}
.content .ill .illcont{
  margin-top: 20rpx;
  border-top: 1px #e3e3e3 solid;
  padding: 20rpx 0;
}
.content .ill .illcont .eval{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
}

.content .ill .illcont .desc,.content .ill .illcont .descont{
  margin-top: 20rpx;
}